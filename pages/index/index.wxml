<!--index.wxml-->
<view class="container fullScreen">
  <image class="backgroundView" src="/images/back1.jpg" />
  <view class="noteView">
    <!-- 便签目录 -->
    <view class="noNote" wx:if="{{!noteList}}">
      还没有添加过标签,点击右下角添加便签
    </view>
    <scroll-view class='noteList' wx:if="{{noteList}}">
      <view class='listItem'
        wx:for="{{noteList}}"
        wx:key="{{item.date}}"
        data-index="{{index}}"
        bindtap="dataDetail"
      >
        <view class="title">{{item.title}}</view>
        <view class="date">{{item.date}}</view>
      </view>
    </scroll-view>
  </view>
  <view class="addNote" bindtap="addNote">
    <icon type="clear" size="40" color="#2d8cf0" />
  </view> 
</view>
