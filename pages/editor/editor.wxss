/* pages/editor/editor.wxss */

.formWrap {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

textarea {
  height: 280px;
  border-bottom: 2px solid white;
  margin-bottom: 20px;
}

.title {
  width: 100%;
  margin: 20px auto;
  padding: 5px;
  border-bottom: 2px solid white;
}

.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 10px;
}

.footer image {
  width: 80rpx;
  height: 80rpx;
}